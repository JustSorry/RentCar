@page
@model RentCar.Pages.Accounts.CarsCompareModel
@{ ViewData["Title"] = "Cars comparing";}

<body>
	<div>
		<form method="post">
			<input name="currentUser" value="@Model.currentUser "hidden />
			<table>
				<tr>
					<th><strong>Cars</strong></th>
					<th><strong>Name</strong></th>
					<th><strong>Country of prod</strong></th>
				</tr>
				@if (Model.currentUser.UserCompare != null)
				{
					@if(Model.currentUser.UserCompare.CompareCar1ID == null || Model.currentUser.UserCompare.CompareCar2ID == null)
					{
						<button name="AddToComBtnPushed" value="true">New compare</button>
					}
					else
					{
						@foreach (var comCar in Model.comCars)
						{
							<tr>
								<td><img src="@comCar.ImgPath" width="40" height="40" /></td>
								<td>@comCar.Brand @comCar.Model</td>
								<td>@comCar.CountryOfProd</td>
							</tr>
						}
					}	
				}
			</table>
		</form>
	</div>
</body>
